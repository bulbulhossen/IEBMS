<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textborder"
        android:gravity="center"
        android:padding="8dp"
        android:text="IEBMS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mitername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/editbox_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Book Name"
        android:padding="15dp" />

    <AutoCompleteTextView
        android:id="@+id/mitername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNumber1"
        android:layout_alignLeft="@+id/bookname"
        android:layout_alignStart="@+id/bookname"
        android:layout_marginBottom="22dp"
        android:background="@drawable/editbox_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Miter Number"
        android:inputType="number"
        android:padding="15dp" />

    <EditText
        android:id="@+id/txtNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNumber2"
        android:layout_alignLeft="@+id/mitername"
        android:layout_alignStart="@+id/mitername"
        android:layout_marginBottom="22dp"
        android:background="@drawable/editbox_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Current Unit"
        android:inputType="number"
        android:padding="15dp" />

    <EditText
        android:id="@+id/txtNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAdd"
        android:layout_alignLeft="@+id/txtNumber1"
        android:layout_alignStart="@+id/txtNumber1"
        android:background="@drawable/editbox_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Previous Unit"
        android:inputType="number"
        android:padding="15dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtResult"
        android:layout_centerHorizontal="true"
        android:text="Calculate" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAdd"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnAdd"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtResult"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtResult"
        android:layout_toEndOf="@+id/txtResult"
        android:layout_toRightOf="@+id/txtResult"
        android:gravity="left"
        android:text="Unit"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="italic" />

</RelativeLayout>
